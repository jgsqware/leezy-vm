# Service Configuration Environment Variables
# These can be used to customize service behavior

# TinyProxy Settings
TINYPROXY_PORT=8888
TINYPROXY_TIMEOUT=600
TINYPROXY_MAX_CLIENTS=100
TINYPROXY_LOG_LEVEL=Info

# Tailscale Settings (in addition to .env)
TAILSCALE_ACCEPT_DNS=true
TAILSCALE_ACCEPT_ROUTES=true
TAILSCALE_SHIELDS_UP=false
TAILSCALE_EXIT_NODE=false

# SSH Settings
SSH_PORT=22
SSH_PASSWORD_AUTH=yes
SSH_ROOT_LOGIN=no

# System Settings
VM_MEMORY=512
VM_CPUS=1
VM_DISK=4GiB