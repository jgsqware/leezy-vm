# User configuration for dynamic user creation in container
# Copy this file to .env and set the values to match your local user

# Current username (usually automatically set by system)
USER=juliengarciagonzalez

# User ID - get with: id -u
USER_UID=501

# Group ID - get with: id -g
USER_GID=20

# Group name - get with: id -gn
GROUPNAME=staff

# Tailscale configuration
TAILSCALE_AUTH_KEY=your-tailscale-auth-key-here
TAILSCALE_HOSTNAME=leezy-vm
TAILSCALE_ACCEPT_ROUTES=true
TAILSCALE_ACCEPT_DNS=true

